/**app.wxss**/
@import 'libs/weui.wxss';

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  /* background-color: #F2F2F2; */
} 
.textFont{
  padding: 12rpx 0;
  font-size: 28rpx;
  line-height: 52rpx;
  text-indent: 56rpx;
}
.img{
  width: 100%;
  height: 35vh;
}
page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

