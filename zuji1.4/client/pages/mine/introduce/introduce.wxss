/* common/intorduce/introduce.wxss */

.definity_location {
  width: 100%;
  height: 200rpx;
  position: relative;
}

.image_title {
  top: 0px;
  width: 100%;
  height: 460rpx;
  position: absolute;
  opacity: 0.3;
}

.photo {
  top: 40rpx;
  left: 305rpx;
  width: 120rpx;
  height: 120rpx;
  position: absolute;
}

.flex {
  display: flex;
}

.section {
  font-size: 32rpx;
  color: #787878;
  padding-bottom: 20rpx;
  align-items: center;
}

.key {
  color: black;
  padding-left: 10rpx;
}

.value {
  color: black;
  font-weight: 600;
  padding-left: 15rpx;
}

.line {
  padding-bottom: 5rpx;
}

.frist_line {
  justify-content: center;
  font-size: 28rpx;
  padding-bottom: 20rpx;
}

.line .line_left {
  flex: 1;
  padding-left: 20rpx;
}

.line .line_right {
  padding-right: 100rpx;
}

.section1 {
  flex: 1;
  padding: 0rpx 20rpx 0rpx 20rpx;
}

/* 时间-年月日 */

.times {
  justify-content: flex-end;
}

.year {
  padding-left: 80rpx;
  font-size: 24rpx;
}

.time {
  align-items: center;
  padding-right: 4rpx;
}

.time .day {
  font-size: 60rpx;
  color: black;
  font-weight: bold;
}

.time .month {
  font-size: 30rpx;
  color: black;
}

/* 事迹组件 */

.deed {
  flex: 1;
  background-color: white;
  padding-bottom: 20rpx;
  margin-left: 18rpx;
  margin-bottom: 20rpx;
  border: none;
  border-radius: 10rpx;
  box-shadow: 1px 1rpx 10rpx 3rpx #EBEBEB;
}

.deed .deed_title {
  flex: 1;
  font-size: 40rpx;
  color: black;
  font-weight: bold;
  padding-left: 20rpx;
  padding-top: 10rpx;
}

/* 编辑按钮 */

.button {
  width: 80rpx;
  height: 70rpx;
  background-color: white;
  padding: 0px;
}

/* 删除按钮 */

.button .second {
  padding-right: 40rpx;
}

/* 去除按钮边框 */

.button::after {
  border: none;
}

/* 附于按钮上的图片样式 */

.deed .modify {
  justify-content: flex-end;
  height: 60rpx;
  width: 60rpx;
  padding-top: 10rpx;
  padding-right: 20rpx;
}

/* 事迹-地址样式 */

.deed .middle {
  font-size: 30rpx;
  padding-left: 20rpx;
  padding-top: 16rpx;
  padding-bottom: 16rpx;
  flex-flow: row wrap;
  word-break: break-all;
}

.down {
  flex: 1;
  padding-left: 20rpx;
  padding-top: 10rpx;
}

.deed .location_image {
  height: 40rpx;
  width: 40rpx;
}

.deed .location_info {
  padding-left: 10rpx;
  font-size: 24rpx;
}

.insert_button {
  height: 110rpx;
  background-color: white;
  margin-bottom: 600rpx;
}

.insert_button::after {
  border: none;
}
