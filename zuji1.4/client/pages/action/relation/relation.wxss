
.flex {
  display: flex;
}

.pingmu {
  width: 100%;
  height: 40.7vh;
  color:white;
}

.title {
  font-size: 28rpx;
  color: white;
  width: 100%;
  background-color: #363636;
  margin: 40rpx 0rpx 20rpx 0rpx;
}

.relation_input {
  width: 100%;
  background-color: #363636;
  color: white;
  font-size: 28rpx;
  justify-content: flex-end;
  margin: 40rpx 60rpx 100rpx 0rpx;
}

.relation_result {
  width: 100%;
  background-color: #363636;
  color: white;
  font-size: 50rpx;
  justify-content: flex-end;
  margin: 40rpx 60rpx 100rpx 0rpx;
}

.body_view {
  width: 100%;
  background-color: black;
  border-top: 0.1rpx solid #404040;
  border-bottom: 0.1rpx solid #404040;
  justify-content: flex-start;
}

.switch {
  padding: 20rpx 10rpx 20rpx 10rpx;
}

.text {
  color: white;
  align-items: center;
  justify-content: flex-start;
}

.block_button {
  width: 24.5vw;
  height: 12.5vh;
  color: white;
  font-size: 50rpx;
  justify-content: center;
  align-items: center;
  border: 0.1rpx solid #404040;
  border-radius: 7%;
}

.count_button {
  width: 25vw;
  height: 37.5vh;
  background-color: #e7763e;
  color: white;
  justify-content: center;
  align-items: center;
  border: 0.1rpx solid #404040;
  border-radius: 7%;
}
