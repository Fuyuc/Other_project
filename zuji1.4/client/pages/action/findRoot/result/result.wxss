.doctor-bgcolor-white{
  border-top: 1vh #EDECEB solid;
  width: 100%;
  height: 80vh;
  background-color: white;
}
.doctor-third{
  margin: 20rpx 30rpx 0rpx 30rpx; 
  text-align: left;
}
.doctor-tips{
  border-left: 10rpx #BB1C21 solid;
  font-size: 34rpx;
  padding-left: 20rpx;
  color: black;
}
.doctor-info{
  padding: 12rpx 0;
  font-size: 26rpx;
  line-height: 52rpx;
  text-indent: 56rpx;
}
