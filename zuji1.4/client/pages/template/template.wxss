/* 查询结果列表上拉记载页面模板样式 */
.list-expertStyle{
  display: flex;
  padding: 3vh 3vw;
  width: 96vw;
  height: 18vh;
  background-color: white;  
  border-top: #f5f5f5 1vh solid;
  /* background-color: gold; */
}
.list-expertPhoto{
  float: left;
  width: 19vw;
  height: 13vh;
  margin-left: 2vw;
}
.list-expertInfo{
  float: left;
  margin-left: 4vw;
  width: 76%;
  height: 18vh; 
  /* background-color: beige; */
}
.list-infoTop{
  width: 100%;
  height: 5vh;
  line-height: 4vh;
  background-color: white; 
  
}
.list-topName{
  float: left;
  font-weight: bold;
  line-height: 5vh;
}
.list-topType{
  float: left;
  margin-left: 3vw;
  border: 1rpx solid #ccc;
  padding: 1rpx 3rpx;
  font-size:22rpx;
  color: #C1C1C1;  
}
.list-infoMiddle{
  width: 90%;
  height: 7vh;
  line-height: 3.5vh;
  font-size: 24rpx;
   /*多行文本溢出隐藏*/
  display: -webkit-box ;
  -webkit-line-clamp:2;
  word-break: break-all;
  -webkit-box-orient: vertical;
  overflow:hidden;
  text-overflow:ellipsis;
}
.list-infoBottom{
  width: 90%;
  height: 3vh;
  line-height: 3vh;
  color: #9a9a9a;
  font-size: 24rpx;
  /* background-color: blue; */
}
.class_item{
  border-bottom: solid #f5f5f5 1px;
  padding: 36rpx;
}
.class_item_end{
  text-align: center;
}

/* 搜索框 */
.picker{
  color: #CC3300;
  padding:  0 1vw;
  padding-right: 1vw;
  line-height: 5vh;
  font-size: 32rpx;
  background-color: #EFEFF4;
}
.showAdd{
  color: gray;
 font-size: 28rpx;
}

.weui-search-bar__cancel-btn{
  padding-top: 0.5vh;
}
.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 12px 15px 12px 35px;
}